<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.3"
            android:id="@+id/GuideLeft"
    />
    <androidx.constraintlayout.widget.Guideline
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"
            android:id="@+id/GuideMiddleV"
    />
    <androidx.constraintlayout.widget.Guideline
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.8"
            android:id="@+id/GuideRight"
    />
    <androidx.constraintlayout.widget.Guideline
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.5"
            android:id="@+id/GuideMiddleH"
    />


    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toLeftOf="@id/GuideLeft"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/GuideMiddleH"
            app:layout_constraintBottom_toBottomOf="@id/GuideMiddleH"
            android:id="@+id/scoreDate"
            android:textAlignment="center"
            android:text="2018-02-19
                          09:29:17"
    />
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/GuideLeft"
            app:layout_constraintRight_toLeftOf="@id/GuideMiddleV"
            app:layout_constraintTop_toTopOf="@id/GuideMiddleH"
            app:layout_constraintBottom_toBottomOf="@id/GuideMiddleH"
            android:id="@+id/scoreGame"
            android:textAlignment="center"
            android:text="Hangman"
    />
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/GuideMiddleV"
            app:layout_constraintRight_toLeftOf="@id/GuideRight"
            app:layout_constraintTop_toTopOf="@id/GuideMiddleH"
            app:layout_constraintBottom_toBottomOf="@id/GuideMiddleH"
            android:id="@+id/scorePlayer"
            android:textAlignment="center"
            android:text="Paul"
    />
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/GuideRight"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/GuideMiddleH"
            app:layout_constraintBottom_toBottomOf="@id/GuideMiddleH"
            android:id="@+id/scoreScore"
            android:textAlignment="center"
            android:text="loose"
    />




</androidx.constraintlayout.widget.ConstraintLayout>